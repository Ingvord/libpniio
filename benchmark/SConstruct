
import os.path as path

#special variables for the build
var = Variables()

#
var.Add(PathVariable("H5LIB","HDF5 library installation directory","/usr/lib"))
var.Add(PathVariable("H5INC","HDF5 headers installation directory","/usr/include"))

var.Add(PathVariable("NXLIB","libpninx library installation directory","/usr/lib"))
var.Add(PathVariable("NXINC","libpninx header installation directory","/usr/include"))

var.Add(PathVariable("UTLIB","lipniutils library installation directory","/usr/lib"))
var.Add(PathVariable("UTINC","lipniutils header installation directory","/usr/include"))


env = Environment(variables=var)


#add linker paths
env.Append(CPPFLAGS= ["-O2","-Wall","-std=c++0x"])
env.Append(LIBPATH = [env["H5LIB"],env["NXLIB"],env["UTLIB"]])

#add include paths
env.Append(CPPPATH = [env["H5INC"],env["NXINC"],env["UTINC"]])
env.Append(LIBS=["hdf5","libpniutils","libpninx","boost_program_options"])

src_list = ["BenchmarkConfig.cpp","Timer.cpp","Main.cpp","BenchmarkResult.cpp"]
env.Program("nxbmark",src_list)

