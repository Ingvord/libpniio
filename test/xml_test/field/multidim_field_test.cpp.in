#include <boost/test/unit_test.hpp>
#include <boost/test/floating_point_comparison.hpp>
#include <pni/io/nx/nx.hpp>
#include <pni/io/nx/xml/node.hpp>
#include <pni/core/types.hpp>
#include <pni/io/nx/algorithms/create_group.hpp>
#include <pni/io/nx/algorithms/close.hpp>
#include <pni/io/nx/algorithms/write.hpp>
#include <pni/io/nx/algorithms/create_attribute.hpp>
#include <pni/io/nx/algorithms/create_field.hpp>
#include <complex>
#include "field_utils.hpp"
#include "../xml_base_fixture.hpp"
#include "../../base_fixture.hpp"

using namespace pni::core;
using namespace pni::io::nx; 


struct multidim_field_@TYPE@_fixture : base_fixture,xml_base_fixture
{
    h5::nxobject nx_parent;
    static const string parent_name;
    multidim_field_@TYPE@_fixture():
        //base_fixture("multidim_field_test_@TYPE@.nxs"),
        base_fixture("field_test.nx",true),
        xml_base_fixture(),
        nx_parent()
    {

        if(root.has_child(parent_name))
            nx_parent = root[parent_name];
        else
            nx_parent = root.create_group(parent_name,"NXentry");
    }

    ~multidim_field_@TYPE@_fixture()
    {
        close(nx_parent);
    }
};

const string multidim_field_@TYPE@_fixture::parent_name = "multidim_test_@TYPE@";

BOOST_FIXTURE_TEST_SUITE(multidim_field_test_@TYPE@,multidim_field_@TYPE@_fixture)

    BOOST_AUTO_TEST_CASE(test_inquery)
    {
        typedef std::vector<@TYPE@> array_type;
        BOOST_CHECK_NO_THROW(root_node = xml::create_from_file("multidim_field_test_@TYPE@.xml"));
        BOOST_CHECK_NO_THROW(child_node = xml::get_child_by_name(root_node.get_child("group"),"data"));
        
        BOOST_CHECK_EQUAL(xml_test::field_test::size(child_node),3);
        BOOST_CHECK_EQUAL(xml_test::field_test::rank(child_node),1);
        BOOST_CHECK_EQUAL(xml_test::field_test::type_id(child_node),type_id_t::@TYPEID@);
       
        array_type r{@CPP_DATA@};
        array_type data;
        xml_test::field_test::data_from_xml(child_node,data);

        for(auto r_iter = r.begin(),d_iter = data.begin();
            d_iter != data.end();
            ++d_iter,++r_iter)
        {
            @EQUALITY_CHECK@
        }

    }

    //-------------------------------------------------------------------------
    BOOST_AUTO_TEST_CASE(test_create_object)
    {
        root_node = xml::create_from_file("multidim_field_test_@TYPE@.xml");
        child_node = xml::get_child_by_name(root_node.get_child("group"),"data");

        //attach the field to the group
        h5::nxfield field = xml_test::field_test::object_from_xml(nx_parent,child_node);

        BOOST_CHECK_EQUAL(field.size(),3);
        BOOST_CHECK_EQUAL(field.rank(),1);
        BOOST_CHECK_EQUAL(field.type_id(),type_id_t::@TYPEID@);
    }

    //-------------------------------------------------------------------------
    BOOST_AUTO_TEST_CASE(test_create_compression_object)
    {
        root_node = xml::create_from_file("multidim_field_test_@TYPE@.xml");
        child_node = xml::get_child_by_name(root_node.get_child("group"),"data_comp");

        //attach the field to the group
        h5::nxfield field = xml_test::field_test::object_from_xml(nx_parent,child_node);

        BOOST_CHECK_EQUAL(field.size(),2048*512);
        BOOST_CHECK_EQUAL(field.rank(),3);
        BOOST_CHECK_EQUAL(field.type_id(),type_id_t::@TYPEID@);
    }

    //-------------------------------------------------------------------------
    BOOST_AUTO_TEST_CASE(test_chunked_field)
    {
        root_node = xml::create_from_file("multidim_field_test_@TYPE@.xml");
        child_node = xml::get_child_by_name(root_node.get_child("group"),"data_chunk");

        //attach the field to the group
        h5::nxfield field = xml_test::field_test::object_from_xml(nx_parent,child_node);

        BOOST_CHECK_EQUAL(field.size(),2048);
        BOOST_CHECK_EQUAL(field.rank(),2);
        BOOST_CHECK_EQUAL(field.type_id(),type_id_t::@TYPEID@);
        
    }

    //-------------------------------------------------------------------------
    BOOST_AUTO_TEST_CASE(test_from_object)
    {
        typedef std::vector<@TYPE@> array_type;
        h5::nxobject field = get_child(nx_parent,"data");
        array_type r{@CPP_DATA@};
        BOOST_CHECK_NO_THROW(write(field,r));

        root_node.add_child("group",xml::group::object_to_xml(h5::nxobject(root)));
        xml::node field_node;
        BOOST_CHECK_NO_THROW(field_node = xml_test::field_test::object_to_xml(field));
        xml_test::field_test::data_to_xml(r,field_node);
        child_node = root_node.add_child("group.field",field_node);

        BOOST_CHECK_EQUAL(xml_test::field_test::size(child_node),3);
        BOOST_CHECK_EQUAL(xml_test::field_test::rank(child_node),1);
        BOOST_CHECK_EQUAL(xml_test::field_test::type_id(child_node),type_id_t::@TYPEID@);    

    }

BOOST_AUTO_TEST_SUITE_END()
